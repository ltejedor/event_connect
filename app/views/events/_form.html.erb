<%= form_for(@event) do |f| %>
<%= f.error_messages %>

  <p>
    <%= hidden_field_tag :user_id, @user.id %>
  </p>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :starts %><br />
    <%= f.text_field :starts_at %>
  </p>
  <p>
    <%= f.label :ends %><br />
    <%= f.text_field :ends_at %>
  </p>
  <p>
    <%= f.label :room_booked %><br />
    <%= f.text_field :room_booked %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
<%= f.submit %>
<% end %>
